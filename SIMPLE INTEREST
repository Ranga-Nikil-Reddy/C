#include <stdio.h>

int main()
{
    int p,t,r,simpleinterest;
    printf("enter the value of principal amount"); 
    scanf("%d",&p);
    printf("enter the value of time");
    scanf ("%d",&t);
    printf("enter the value of rate");
    scanf ("%d",&r);
    simpleinterest =(p*t*r)/100;
    printf ("the simple interest is %d",simpleinterest);
    return 0;

}
